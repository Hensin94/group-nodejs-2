<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .register-form {
        margin: 0 auto;
        max-width: 430px;
        display: flex;
        flex-direction: column;
    }

    .form-control-row {
        display: flex;
        justify-content: space-between;
    }
    .register-form__control {
        margin-bottom: 15px;
        width: 300px;
    }

    .register-form__submit {
        width: 200px;
        margin: 0 auto;
    }
</style>

<div class="container">

    <form class="register-form" method="post" action="/signup">
        <h2>Пожалуйста, представьтесь</h2>
        <div class="form-control-row">
            <label for="email">E-mail</label>
            <input class="register-form__control" id="email" name="email" type="email">
        </div>
        <div class="form-control-row">
            <label for="name">Name</label>
            <input class="register-form__control" id="name" name="name" type="text">
        </div>
        <div class="form-control-row">
            <label for="surname">Surname</label>
            <input class="register-form__control" id="surname" name="surname" type="text">
        </div>
        <div class="form-control-row">
            <label for="password">Password</label>
            <input class="register-form__control" id="password" name="password" type="password">
        </div>
        <div class="form-control-row">
            <label for="repassword">Repeat Password</label>
            <input class="register-form__control" id="repassword" name="repassword" type="password">
        </div>
        <button class="register-form__submit" type="submit">Зарегистрироваться</button>
    </form>
</div>
