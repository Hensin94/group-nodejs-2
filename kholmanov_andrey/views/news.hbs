<div>
    <h1>Новости</h1>

    <h2>Сортировка</h2>
    <form method="POST" action="/">
        <input type="text" name="param1" value="{{count}}" placeholder="Сколько новостей на 1 страницу необходимо вывести">
        <input type="submit">
    </form>

    <ul>
        {{#each news}}
        <li>{{this.title}}</li>
        {{/each}}
    </ul>
</div>