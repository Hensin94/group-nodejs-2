<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <title>{{news.title}}</title>
</head>
<body>
    
    <div class="container">
        <h2 class="text-center">{{news.title}}</h2>
        <div class="row">
            <nav class="col-3">
                <form action="/options" method="POST">
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Example select</label>
                        <select name="category" class="form-control" id="exampleFormControlSelect1">
                            {{#each allCategories}}
                                <option value="{{this.name}}" {{#if this.target}}selected{{/if}}>{{this.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Example select</label>
                        <select name="count" class="form-control" id="exampleFormControlSelect1">
                            {{#each allCounts}}
                                <option value="{{this.name}}" {{#if this.target}}selected{{/if}}>{{this.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button> 
                </form>
            </nav>  
            <div class="row col-9">
                {{#each news.items}}
                <div class="card col-5 m-1" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{this.pubDate}}</h6>
                        <p class="card-text">{{this.content}}/p>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>
</html>