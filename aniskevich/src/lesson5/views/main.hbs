<h2>Tasks grid</h2>
<div>
    {{#each tasks}}
    <div class="line">
        <div>
            {{this.title}}
        </div>
        <div>
            <a href="/task/{{this._id}}"><button>view</button></a>
            <a href="/update/{{this._id}}"><button>update</button></a>
            <a href="/delete/{{this._id}}"><button>remove</button></a>
        </div>
    </div>
    {{/each}}
</div>
<h4>Create new task</h4>
  <form action="/task" method="POST">
    <label for="title">Task title</label>
    <input type="text" name="title">
    {{!-- <label for="isDone">Done?</label>
    <input type="checkbox" name="isdone"> --}}
    <button>Create</button>
  </form>